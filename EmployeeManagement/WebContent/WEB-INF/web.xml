<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>FirstWebApp</display-name>
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>CommonControl</servlet-name>
    <servlet-class>com.emp.controller.common.CommonControl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CommonControl</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
    <servlet>
    <servlet-name>AdminControl</servlet-name>
    <servlet-class>com.emp.controller.admin.AdminControl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminControl</servlet-name>
    <url-pattern>/admin</url-pattern>
  </servlet-mapping>
    <servlet>
    <servlet-name>EmployeeControl</servlet-name>
    <servlet-class>com.emp.controller.employee.EmployeeControl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EmployeeControl</servlet-name>
    <url-pattern>/emp</url-pattern>
  </servlet-mapping>
  <error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>/Error.jsp</location>
  </error-page>
</web-app>